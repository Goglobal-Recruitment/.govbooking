const countryData = {
  "ZA": { name: "South Africa", provinces: ["Gauteng", "Western Cape", "KwaZulu-Natal"] },
  "US": { name: "United States", provinces: ["California", "Texas", "New York"] },
  // Add other countries and their provinces
};

const postalCodes = {
  "ZA": {
    "Gauteng": ["2000", "2010", "2020"],
    "Western Cape": ["8000", "8010", "8020"],
    // Add other provinces and their postal codes
  },
  "US": {
    "California": ["90001", "90002", "90003"],
    "Texas": ["75001", "75002", "75003"],
    // Add other provinces and their postal codes
  },
  // Add other countries and their provinces' postal codes
};

function updateProvinces() {
  const countrySelect = document.getElementById("country");
  const provinceSelect = document.getElementById("province");
  const selectedCountry = countrySelect.value;

  // Clear existing options
  provinceSelect.innerHTML = '<option value="">Select Province</option>';

  if (selectedCountry && countryData[selectedCountry]) {
    const provinces = countryData[selectedCountry].provinces;
    provinces.forEach(province => {
      const option = document.createElement("option");
      option.value = province;
      option.textContent = province;
      provinceSelect.appendChild(option);
    });
  }
}

function updatePostalCodes() {
  const countrySelect = document.getElementById("country");
  const provinceSelect = document.getElementById("province");
  const postalSelect = document.getElementById("postal");
  const selectedCountry = countrySelect.value;
  const selectedProvince = provinceSelect.value;

  // Clear existing options
  postalSelect.innerHTML = '<option value="">Select Postal Code</option>';

  if (selectedCountry && selectedProvince && postalCodes[selectedCountry] && postalCodes[selectedCountry][selectedProvince]) {
    const codes = postalCodes[selectedCountry][selectedProvince];
    codes.forEach(code => {
      const option = document.createElement("option");
      option.value = code;
      option.textContent = code;
      postalSelect.appendChild(option);
    });
  }
}
